script/source = "extends RigidBody2D

var floating = false
var speed = 1
var WATER_K = .2 #0.025f
var water = null

func _physics_process(delta):
	# física para a flutuação
	if floating and water != null:
		var ct = global_position.y - water.global_position.y
		linear_velocity.y -=  ((WATER_K * ( ct ))  ) * 1.5
		
	if abs(self.rotation) > 0:
		if self.rotation < 0:
			self.apply_torque_impulse(400)
		else:
			self.apply_torque_impulse(-400)
	

func _on_checkWater_area_entered(area):
	if area.is_in_group(\"water\"):
		# Caiu na água
		if not floating:
			water = area
			gravity_scale = 0
			floating = true
"

